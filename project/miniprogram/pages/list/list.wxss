.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  background: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}

.list {
  background: white;
  border-radius: 10rpx;
}

.item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info {
  margin-bottom: 20rpx;
}

.info view {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}